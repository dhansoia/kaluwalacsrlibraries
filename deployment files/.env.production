# Kaluwala CSR Libraries - Production Environment Variables
# Copy this file to .env and fill in your actual values

# ===== FLASK =====
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY
FLASK_ENV=production

# ===== DATABASE =====
# PostgreSQL connection string
DATABASE_URL=postgresql://kaluwala:kaluwala_password@postgres:5432/kaluwala_db

# ===== SITE =====
SITE_URL=https://kaluwala.com
SITE_NAME=Kaluwala CSR Libraries

# ===== EMAIL (Gmail) =====
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here
MAIL_DEFAULT_SENDER=noreply@kaluwala.com

# ===== SECURITY =====
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# ===== LOGGING =====
LOG_TO_STDOUT=True
LOG_LEVEL=INFO

# ===== OPTIONAL =====
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# AWS_ACCESS_KEY_ID=your-aws-key-for-s3-uploads
# AWS_SECRET_ACCESS_KEY=your-aws-secret

# ===== INSTRUCTIONS =====
#
# 1. Generate SECRET_KEY:
#    python -c "import secrets; print(secrets.token_hex(32))"
#
# 2. Gmail App Password:
#    - Enable 2FA: https://myaccount.google.com/security
#    - Generate App Password: https://myaccount.google.com/apppasswords
#    - Use the 16-character password in MAIL_PASSWORD
#
# 3. Update SITE_URL to your actual domain
#
# 4. For production, ensure SESSION_COOKIE_SECURE=True (requires HTTPS)
#
